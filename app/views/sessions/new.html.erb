<div class="row">
	<h1>Log in</h1>
	
	<%= form_tag sessions_path do %>
	<div>
		<%= label_tag :email %> <br>
		<%= text_field_tag :email, params[:email] %>
	</div>
	<div>
		<%= label_tag :password %> <br>
		<%= password_field_tag :password %>
	</div>
	<div>
		<%= submit_tag "Log In", class:"button" %>
	</div>
	<% end %>
</div>
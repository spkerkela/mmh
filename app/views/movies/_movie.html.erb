<h2><%= link_to movie.title, movie %>
	<% if movie.reviews.any? %>
		<% average = 0.0%>
		<% num = 0%>
		<% for review in movie.reviews %>
			<% average += review.rating%>
			<% num += 1%>
	
		<% end %>
		<%= average/num %>
	<% else %>
		
	<% end %>
</h2>
<div>
	<ul class="small-block-grid-2">
		<li><%=link_to image_tag(movie.poster), movie %></li>
		<li><p><%= movie.plot[0..200]%>..</p></li>
		<li><div class="panel">
			<strong>Released:</strong>
		<p><%= movie.released %></p>

		<strong>Directors:</strong>
		<ul class="no-bullet">
		<li><%= movie.director %></li>
		</ul>

		<strong>Writers:</strong>
		<ul class="no-bullet">
		<li><%= movie.writer %></li>
		</ul>

		<strong>Actors:</strong>
		<ul class="no-bullet">
		<li><%= movie.actors %></li>
		</ul>
		</div>
		</li>
	</ul>
	<% if movie.reviews.any? %>
		<!--
		<% average = 0.0%>
		<% num = 0%>
		<% for review in movie.reviews %>
			<% average += review.rating%>
			<% num += 1%>
	
		<% end %>
		<%= average/num %>
		-->
	<% else %>
		<p>This movie has not been reviewed yet.</p>
	<% end %>
</div>